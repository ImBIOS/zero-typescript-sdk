{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outFile": "@types/zero/index.d.ts",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "sdk/*": [
        "./src/*"
      ]
    }
  },
  "exclude": ["./@types"]
}
